              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', () => {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has success property', () => {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('success');",
                  "});",
                  "",
                  "pm.test('Logout all sessions successful', () => {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.true;",
                  "    pm.expect(response.message.toLowerCase()).to.include('logout');",
                  "    pm.expect(response.message.toLowerCase()).to.include('all');",
                  "});",
                  "",
                  "// Clear stored tokens after successful logout",
                  "if (pm.response.code === 200) {",
