        {
          "name": "✅ Logout All Sessions",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/logout-all",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "logout-all"]
            }
          },
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Only login if we don't have a valid access token",
                  "const currentToken = pm.environment.get('accessToken');",
                  "",
                  "if (!currentToken || currentToken === '') {",
                  "    console.log('No access token found, logging in...');",
                  "    ",
                  "    pm.sendRequest({",
                  "        url: pm.environment.get('baseUrl') + '/auth/login',",
                  "        method: 'POST',",
                  "        header: {",
                  "            'Content-Type': 'application/json'",
                  "        },",
                  "        body: {",
                  "            mode: 'raw',",
                  "            raw: JSON.stringify({",
                  "                username: 'logintest',",
                  "                password: 'NewPassword123!'",
                  "            })",
                  "        }",
                  "    }, (err, res) => {",
                  "        if (err) {",
                  "            console.error('Login request failed:', err);",
                  "            return;",
                  "        }",
                  "        ",
                  "        if (res && res.json().success && res.json().data && res.json().data.accessToken) {",
                  "            pm.environment.set('accessToken', res.json().data.accessToken);",
                  "            if (res.json().data.refreshToken) {",
                  "                pm.environment.set('refreshToken', res.json().data.refreshToken);",
                  "            }",
                  "            console.log('Login successful, token set');",
                  "        } else {",
                  "            console.error('Login failed or invalid response');",
                  "        }",
                  "    });",
                  "} else {",
                  "    console.log('Access token already available');",
                  "}"
                ]
              }
            },
