        {
          "name": "✅ Login with Username",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"logintest\",\n  \"password\": \"Password123!\",\n  \"rememberMe\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', () => {",
                  "    if (pm.response.code !== 200) {",
                  "        console.log('Login failed with status:', pm.response.code);",
                  "        console.log('Response:', pm.response.text());",
                  "    }",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    ",
                  "    pm.test('Response structure is correct', () => {",
                  "        pm.expect(response.success).to.be.true;",
                  "        pm.expect(response.message).to.equal('Login successful');",
                  "        pm.expect(response.data).to.exist;",
                  "    });",
                  "",
                  "    pm.test('Response contains access token', () => {",
                  "        pm.expect(response.data.accessToken).to.exist;",
                  "        pm.expect(response.data.accessToken).to.be.a('string');",
                  "        pm.environment.set('accessToken', response.data.accessToken);",
                  "    });",
                  "",
                  "    pm.test('Response contains user data', () => {",
                  "        pm.expect(response.data.user).to.exist;",
                  "        pm.expect(response.data.user.username).to.equal('logintest');",
                  "        // Test that sensitive data is not exposed",
                  "        pm.expect(response.data.user.password).to.be.undefined;",
                  "        pm.expect(response.data.user.salt).to.be.undefined;",
                  "    });",
                  "",
                  "    pm.test('Response contains refresh token', () => {",
                  "        pm.expect(response.data.refreshToken).to.exist;",
                  "        pm.expect(response.data.refreshToken).to.be.a('string');",
                  "        pm.environment.set('refreshToken', response.data.refreshToken);",
                  "    });",
                  "",
                  "    pm.test('Cookie is set correctly', () => {",
                  "        const cookie = pm.cookies.get('accessToken');",
                  "        pm.expect(cookie).to.exist;",
                  "        pm.expect(cookie).to.equal(response.data.accessToken);",
                  "    });",
                  "}"
                ]
              }
            }
          ]
        },
