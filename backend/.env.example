NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=your_mongoclusterURL

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30
JWT_ISSUER=social-media-platform
JWT_AUDIENCE=social-media-users

# Password Security
BCRYPT_ROUNDS=12

# Email Configuration (Gmail)
EMAIL_FROM=email@gmail.com
EMAIL_FROM_NAME=Social Media Platform
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=email@gmail.com
SMTP_PASSWORD=your_app_password

# Client URL (for email links)
CLIENT_URL=http://localhost:3000

# Security
RESET_PASSWORD_EXPIRE=10
EMAIL_VERIFICATION_EXPIRE=24
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=30